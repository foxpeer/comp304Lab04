<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="120dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/logo" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:text="Healthy Care app"
        android:textAlignment="center"
        android:textSize="32dp"
        android:textStyle="bold"/>


    <EditText
        android:id="@+id/tvNurseId"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="24dp"
        android:autofillHints="@string/prompt_id"
        android:hint="@string/prompt_id" />

    <EditText
        android:id="@+id/tvPassword"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:autofillHints="@string/prompt_password"
        android:hint="@string/prompt_password"
        android:inputType="textPassword"/>
    <TextView
        android:id="@+id/tvMsg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:textColor="@color/colorMsg"/>

    <Button
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:background="@color/colorSubmit"
        android:text="@string/action_sign_in_short"
        android:onClick="LoginClick"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="80dp"
        android:textStyle="bold"  />
    <TextView
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:text="not registered? \n Go to register first"
        android:textSize="14sp"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="60dp"
        android:textColor="@color/colorAccent"/>
    <Button
        android:id="@+id/Register"
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:background="@color/colorRegister"
        android:text="REGISTER"
        android:onClick="RegisterClick"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="80dp"
        android:textStyle="bold"  />



</LinearLayout>